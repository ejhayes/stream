<div class="container-fluid">

  <div class="row-fluid">

    <div class="span8">

      <div class="container-fluid">

        <div class="row-fluid">

          <%= form_tag({:controller => 'stream', :action => 'tweet'}, :method => 'POST', :id => 'tweet_form') do %>
            <textarea name="message" id="message" required></textarea><br />
            <button class="btn btn-info" >Send</button>
          <% end %>

        </div>

        <div id="tweet_holder" class="row-fluid">
        </div>
        <div id="tweet_loader"></div>
        <div id="tweet_footer" class="hide">
          <a id="fetch_more_tweets" class="btn btn-info">see more <i class="icon-white icon-refresh"></i></a>
        </div><!-- /#tweet_footer -->

      </div>

    </div>

    <div class="span4">

      <ul>
        <% @users.each do |user| %>
          <li>
            <a href="/user/<%= user.username %>"><%= user.username %></a>
            <% if current_user.is_following? user %>
              <a class="btn btn-mini btn-danger" href="/user/<%= user.username %>/unfollow"><i class="icon-remove icon-white"></i> Stop Following</a>
            <% else %>
              <a class="btn btn-mini btn-success" href="/user/<%= user.username %>/follow"><i class="icon-ok icon-white"></i> Start Following</a>
            <% end %>
          </li>
        <% end %>
      </ul>

    </div>

  </div>

</div>


